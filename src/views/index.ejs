<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title><%= title || 'PersonalBlog' %></title>
  <style>
    body { font-family: system-ui, Arial, sans-serif; margin: 2rem; }
    header, footer { margin-bottom: 1rem; }
    .post { padding: 1rem; border: 1px solid #ddd; border-radius: 8px; margin-bottom: 1rem; }
    a.button { display: inline-block; padding: 0.5rem 0.75rem; background: #0d6efd; color: #fff; text-decoration: none; border-radius: 6px; }
  </style>
</head>
<body>
  <header>
    <h1>PersonalBlog</h1>
    <nav>
      <a class="button" href="/new">New Post</a>
    </nav>
  </header>

  <main>
    <% if ((posts || []).length === 0) { %>
      <p>No posts yet.</p>
    <% } else { %>
      <% posts.forEach(function(post){ %>
        <div class="post">
          <h3><a href="/<%= post._id %>"><%= post.title %></a></h3>
          <p><%= post.body %></p>
          <small><%= new Date(post.createdAt).toLocaleString() %></small>
          <div style="margin-top: .5rem;">
            <a class="button" href="/<%= post._id %>/edit">Edit</a>
            <form action="/<%= post._id %>?_method=DELETE" method="POST" style="display:inline-block; margin-left:.5rem;">
              <button type="submit">Delete</button>
            </form>
          </div>
        </div>
      <% }) %>
    <% } %>
  </main>

  <footer>
    <small>&copy; <%= new Date().getFullYear() %> PersonalBlog</small>
  </footer>
</body>
</html>
